<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.lisah.openfluid.common.commands.category"
            name="OpenFLUID">
      </category>
      <command
            categoryId="org.lisah.openfluid.common.commands.category"
            id="org.lisah.openfluid.common.commands.cmakeCommand"
            name="Run CMake on OpenFLUID ware project">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.lisah.openfluid.common.handlers.OpenFLUIDHandler"
            commandId="org.lisah.openfluid.common.commands.cmakeCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.lisah.openfluid.common.commands.cmakeCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.lisah.openfluid.common.menus.openfluidMenu"
               label="OpenFLUID"
               mnemonic="O">
            <command
                  commandId="org.lisah.openfluid.common.commands.cmakeCommand"
                  id="org.lisah.openfluid.common.menus.cmakeCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.lisah.openfluid.common.toolbars.openfluidToolbar">
            <command
                  commandId="org.lisah.openfluid.common.commands.cmakeCommand"
                  icon="icons/openfluid-cmake-eclipse.png"
                  id="org.lisah.openfluid.common.toolbars.cmakeCommand"
                  tooltip="Run CMake on OpenFLUID ware project">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
